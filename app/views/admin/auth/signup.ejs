<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= data.title %></title>

  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/admin/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/admin/dist/css/adminlte.min.css?v=3.2.0">
  <link rel="icon" href="/images/icon.png">

  <style>
    input.invalid { border-color: red; }
    .input-invalid, .form-invalid {
      font-size: 12px;
      color: rgb(248, 146, 146);
    }
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background: linear-gradient(135deg, #6a11cb, #2575fc);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .login-box {
      width: 400px;
    }

    .login-button {
      background: linear-gradient(45deg, #6a11cb, #2575fc);
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 25px;
      cursor: pointer;
      width: 100%;
    }

    .login-button:hover {
      opacity: 0.9;
    }
  </style>
</head>
<body class="hold-transition login-page">
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <img src="/images/sync.png" alt="" height="105px" width="100px"> 
        <a href="/admin/" class="h1"><b><p class="">WorkSync</p></b></a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Register a new account</p>
  
        <form id="fm_signup">
          <!-- Email -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <input type="email" id="email" class="form-control" placeholder="Email" data-key="email" data-type="input-text" data-group="g1" required>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-envelope"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>
  
          <!-- Password -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <input type="password" id="password" class="form-control" placeholder="Password" data-key="password" data-type="input-text" data-group="g1" required>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-lock"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>

          <!-- Confirm Password -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm Password" data-key="confirmPassword" data-type="input-text" data-group="g1" required>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-lock"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>
  
          <!-- Project Name -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <input type="text" id="project_name" class="form-control" placeholder="Project Name" data-key="project_name" data-type="input-text" data-group="g1" required>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-project-diagram"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>
  
          <!-- Project Domain -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <input type="text" id="project_domain" class="form-control" placeholder="Project Domain" data-key="project_domain" data-type="input-text" data-group="g1" required>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-tags"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>
  
          <!-- Mentor Name -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <input type="text" id="mentor_name" class="form-control" placeholder="Mentor Name" data-key="mentor_name" data-type="input-text" data-group="g1" required>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-user-tie"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>
  
          <!-- Department Dropdown -->
          <div class="input-group-con mb-3">
            <div class="input-group">
              <select id="department" class="form-control" data-key="department" data-type="input-text" data-group="g1" required>
                <option value="">Select Department</option>
                <option value="CSE">CSE</option>
                <option value="IT">IT</option>
                <option value="ECE">ECE</option>
                <option value="EEE">EEE</option>
                <option value="BCA">BCA</option>
                <option value="MCA">MCA</option>
                <option value="ME">ME</option>
              </select>
              <div class="input-group-append">
                <div class="input-group-text"><span class="fas fa-building"></span></div>
              </div>
            </div>
            <div class="input-invalid ml-2"></div>
          </div>
  
          <div class="form-invalid ml-2 mb-2 text-center"></div>
  
          <!-- Submit Button -->
          <div class="row">
            <div class="col-8">
              <a href="/admin/auth/login">Already have an account?</a>
            </div>
            <div class="col-4">
              <input type="button" id="bt_signup" value="Sign Up" class="btn btn-primary btn-block" />
              <div id="bt_signup_disabled" class="btn btn-primary btn-block disabled d-none">Wait...</div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  

</body>
<!-- JS Scripts -->
<script src="/admin/plugins/jquery/jquery.min.js"></script>
<script src="/admin/plugins/jquery.cookie.js"></script>
<script src="/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/admin/dist/js/adminlte.min.js?v=3.2.0"></script>

<script>
  $('#bt_signup').on('click', function () {
    toggleButton('#bt_signup', false);
    cleanValidation();

    const bodyObj = getFormFields('g1');

    // Remove confirmPassword from bodyObj before sending to server
    delete bodyObj.confirmPassword;

    ajax_post("/admin/auth/api/signup", basic_header(), bodyObj,
      function (result) {
        if (result.success) {
          location.href = "/admin/auth/login";
        } else {
          if (result.status === 'validation_error') {
            showValidation(result);
          } else {
            $('.form-invalid').html(result.message || 'Something went wrong.');
          }
        }
        toggleButton('#bt_signup', true);
      },
      function () {
        $('.form-invalid').html('Server error! Please try again.');
        toggleButton('#bt_signup', true);
      });
  });

  function basic_header(obj = {}) {
    obj.deviceid = $.cookie('deviceid') || '';
    obj.tokenid = $.cookie('tokenid') || '';
    return obj;
  }

  function ajax_post(url, header, body, success, error) {
    $.ajax({
      url: url,
      type: "POST",
      headers: header,
      data: JSON.stringify(body),
      contentType: 'application/json',
      processData: false,
      success: success,
      error: error
    });
  }

  function toggleButton(id, show = false) {
    if (show) {
      $(id + '_disabled').addClass('d-none');
      $(id).removeClass('d-none');
    } else {
      $(id).addClass('d-none');
      $(id + '_disabled').removeClass('d-none');
    }
  }

  function getFormFields(group) {
    const fields = {};
    $('*[data-group="' + group + '"]').each(function () {
      const key = $(this).attr('data-key');
      const type = $(this).attr('data-type');

      if (type === 'input-text') {
        fields[key] = $(this).val();
      } else if (type === 'checkbox') {
        fields[key] = $(this).prop('checked');
      }
    });
    return fields;
  }

  function showValidation(result) {
    result.error.details.forEach(element => {
      $('*[data-key="' + element.path[0] + '"]').addClass('invalid');
      $('*[data-key="' + element.path[0] + '"]').closest('.input-group-con').find('.input-invalid').html(element.message);
    });
  }

  function cleanValidation() {
    $('.form-invalid').html('');
    $('.invalid').removeClass('invalid');
    $('.input-invalid').html('');
  }
</script>
</html>
